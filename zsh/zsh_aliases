#
# git review
#
alias grw='git review -r origin'
alias grwd='git review -r origin -d'
alias grwl='git review -r origin --list'
alias grwx='git review -r origin -x'

#
# kubectl
#
alias k=kubectl
alias ke='kubectl exec -it'
alias kl='kubectl logs -f'
alias kgp='kubectl get pods'
alias kdp='k describe pod'
alias kdebug='kubectl run -i -t debug --rm --image=caarlos0/debug --restart=Never'

